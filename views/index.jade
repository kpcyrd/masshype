extends layout

block content
  h3 Add client
  form.form-inline(method="post" action="/add")
    div.form-group
      div.col-xs-3
        input(type="hidden" name="_csrf" value="#{csrfToken}")
        input(name="email" placeholder="Email").form-control
    div.form-group
      div.col-xs-3
        input(type="submit" value="Add peer").btn.btn-primary

  h3 Peers
  table.table.table-striped
    tr
      th Email
      th Actions
    each node in nodes
      tr
        td= node.user
        td
          form.btn-group(method="post" action="delete")
            a.btn.btn-default(href="/show/#{node.file}") Show
            input(type="hidden" name="id" value="#{node.file}")
            input(type="hidden" name="_csrf" value="#{csrfToken}")
            input.btn.btn-danger(type="submit" value="Unpeer")
